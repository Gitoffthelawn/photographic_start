{
  "manifest_version": 2,
  "name": "Photographic Start",
  "version": "1.0",

  "applications": {
    "gecko": {
      "id": "photographicstart@robacarp",
      "strict_min_version": "42.0"
    }
  },

  "description": "A start page founded on beauty.",

  "icons": {
    "48": "button/icon.svg",
    "96": "button/icon.svg"
  },

  "content_scripts": [
    {
      "matches": ["https://500px.com/photo/*"],
      "js": ["content/500px.js"]
    }
  ],

  "page_action": {
    "browser_style": true,
    "show_matches": ["https://500px.com/photo/*"],

    "default_icon": {
      "19": "button/icon.svg",
      "38": "button/icon.svg"
    },

    "default_title": "Suggest for PhotoStart"
  },

  "background": {
      "scripts": [ "background/script.js" ]
  },

  "chrome_url_overrides": { "newtab": "content/new_tab.html" },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "permissions": [
    "storage"
  ]
}
